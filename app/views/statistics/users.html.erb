<%= render({ :partial => '/shared/collection_tabs',
             :locals => { :selected => 0,
			 :collection_id => @collection.id }}) %>

<div class="two-columns">
	<div class="left-column">
		<div class="inside-column">
			<!-- no page navigation? -->
            <%= html_block('left') %>
			<p>
				<b>All Transcribers</b><br />
				<% for entry in @t_all_users_and_deeds %>
					<%=entry[0].display_name%>
					(<%= entry[1]%>)
					<% if user_signed_in? && current_user.like_owner?(@collection) %>
						<i>
							<%= entry[0].email %>
						</i>
					<% end %>
					<br />
				<% end %>
			</p>
			<p>
				<b>All Indexers</b><br />
				<% for entry in @i_all_users_and_deeds %>
					<%=entry[0].display_name%>
					(<%= entry[1]%>)
					<% if user_signed_in? && current_user.like_owner?(@collection) %>
						<i>
							<%= entry[0].email %>
						</i>
					<% end %>
					<br />
				<% end %>
			</p>
		</div>
	</div>
	<div class="right-column">
		<div class="inside-column">
			<!-- user stats across collections -->
			<p>
				<b>All Editors</b><br />
				<% for entry in @e_all_users_and_deeds %>
					<%=entry[0].display_name%>
					(<%= entry[1]%>)
					<% if user_signed_in? && current_user.like_owner?(@collection) %>
						<i>
							<%= entry[0].email %>
						</i>
					<% end %>
					<br />
				<% end %>
			</p>
		</div>
	</div>
</div>
