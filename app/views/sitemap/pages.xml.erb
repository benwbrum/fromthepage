<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<% @pages.each do |page| %>
  <url>
    <loc><%= request.protocol + request.host_with_port %>/<%= page.work.collection.owner.slug %>/<%= page.work.collection.slug %>/<%= page.work.slug %>/display/<%= page.id %></loc>
    <lastmod><%= (page.updated_at || page.created_on || Time.now).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
<% end %>
</urlset>