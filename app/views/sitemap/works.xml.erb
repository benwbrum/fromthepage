<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<% @works.each do |work| %>
  <url>
    <loc><%= request.protocol + request.host_with_port %>/<%= work.collection.owner.slug %>/<%= work.collection.slug %>/<%= work.slug %></loc>
    <lastmod><%= (work.most_recent_deed_created_at || work.created_on || Time.now).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>
<% end %>
</urlset>