<script>
	window.addEventListener("bento:ready", function () {
    	bento.showChat();
	});

	window.addEventListener("bentochat:ready", function () {
		window.$bentoChat.setUser('<%= current_user.id%>', {
        	email: '<%= current_user.email %>',
        	name: "<%= current_user.display_name %>"
    	});
	});
</script>