<%= form_tag( {:action => 'numeric_format_start_process'} ) do %>

	<%= hidden_field_tag('image_set_id', @image_set.id) %>
    <% if flash['error'] %>
      <div style="color: red"><%= flash['error'] %></div>
    <% end %>


    <p>Enter a start number.  You will be able to modify numbers later.
    </p>

    <p><label for="directory">Start Date:</label><br/>
    <%= text_field_tag :numeric_start, nil, :size => 60, :maxlength => 256 %></p>

    <p><%= submit_tag 'Next' %></p>
<% end %>
