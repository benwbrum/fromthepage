<%= render '/shared/collection_tabs', :selected => 0, :collection_id => @collection.id %>

<div class="two-columns">
  <div class="left-column">
		<div class="inside-column">
			<p>
			    All Subjects
			</p>

			<p>
        <%= raw(display_categories(@collection.categories, nil) do |category|
              ret = '<i>' + category.title + '</i><br />'
              category.articles.each do |article|
                ret += link_to(article.title,
			                         { :action => 'show',
			                           :article_id => article.id } )
                ret += '<br />'
              end
              ret
            end) %>
      </p>

      <p>
        Uncategorized Articles:
      </p>
      <p>
        <% @uncategorized_articles.each do |article| %>
		      <%= link_to(article.title,
			                 { :action => 'show',
			                   :article_id => article.id } ) %><br />
        <% end %>
      </p>

    </div>
  </div>

  <div class="right-column">
       <div class="inside-column">
          <%= html_block('right') %>
       </div>
   </div>
</div>
