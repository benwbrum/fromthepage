                    </div>
                </div>

                <div class="col-lg-4 col-md-6 col-6">
                    <div class="item" data-aos="zoom-in" data-aos-duration="600">
                        <div class="icon">
                            <%= image_tag("materials/home-services02.png") %>
                        </div>

