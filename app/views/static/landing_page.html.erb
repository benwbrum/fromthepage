<body>
    <%= render "shared/landingbodyheader" %>


    <!-- Home Main -->
    <section class="home-main">
        <div class="text">
            <h2 data-aos="zoom-in" data-aos-duration="800" >Transcribe your material with a community of 5,000+ passionate, detail-oriented volunteers</h2>
            <p data-aos="zoom-in" data-aos-duration="900">FromThePage is a crowdsourcing platform for archives and libraries where volunteers transcribe, index, and describe historic documents</p>

            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 ">
                        <div class="card" data-aos="zoom-in" data-aos-duration="1000">
                            <%= image_tag("materials/main-card01.png") %>
                            <h4>Start engaging the public to transcribe your documents</h4>
        
                            <div class="bottom">
                                <p>Upload 200 pages FREE</p>
                                <% if signed_in? 
                                    target_path = dashboard_role_path
                                   else
                                    target_path = users_new_trial_path
                                   end %>

                                <%= link_to 'Transcribe My Documents', target_path, class: 'button' %>
                            </div>
                        </div>
                    </div>
    
                    <div class="col-lg-4 col-md-6 ">
                        <div class="card second" data-aos="zoom-in" data-aos-duration="1100">
                            <%= image_tag("materials/main-card02.png") %>
                            <h4>I’m here to help libraries and archives transcribe their historic documents</h4>
        
                            <div class="bottom">
                                <%= link_to "Become a Transcriber", new_user_registration_path, class: 'button' %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
