<body>
    <%= render "shared/landingbodyheader" %>

    <!-- Home Main -->
    <section class="home-main">
        <!-- <%= image_tag("materials/main-bg.png") %> -->

        <div class="text">
            <h2 data-aos="zoom-in" data-aos-duration="800">Transcription for Digital Scholarship</h2>
            <p data-aos="zoom-in" data-aos-duration="900">Empowering Digital Scholarship & Classroom Pedagogy — Collaborative Transcription On An Intuitive Easy-To-Use Platform</p>

            <div class="container">
