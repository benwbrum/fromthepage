                    <div class="col-lg-9">
                        <%= image_tag("materials/transcription-digital-main.png", class: 'main-img')%>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Home Main End -->

    <!-- Crowd Digitized -->
    <section class="crowd-digitized">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <div class="title">
                        <h4>Are you looking for a digital tool to facilitate collaborative scholarship with primary textual sources?</h4>
                        <p>Engage researchers and students with a simple, customizable tool to create and proof high-quality transcriptions</p>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
