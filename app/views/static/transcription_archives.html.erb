    <!-- Crowd Case -->
    <section class="crowd-case">
        <div class="container">
            <h2 class="title">Case Studies Using FromThePage</h2>

            <div class="row justify-content-center">
                <div class="col-lg-9">

                    <div class="loop-case">
                        <div class="box">
                            <div class="item">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <%= image_tag("materials/transcription-archive01.png") %>
                                    </div>

                                    <div class="col-lg-6">
