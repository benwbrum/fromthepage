<div class="columns">
  <div class="maincol">
    <table class="datagrid">
      <thead>
        <tr>
          <th><%= t('.page_block') %></th>
          <th><%= t('.action') %></th>
        </tr>
      </thead>
      <tbody>
        <% for page_block in @page_blocks %>
          <tr>
            <td><%= page_block.description %></td>
            <td><%= link_to(t('.edit'), { :action => "edit", :page_block_id => page_block.id }) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="sidecol">
    <%= html_block('right') %>
  </div>
</div>
