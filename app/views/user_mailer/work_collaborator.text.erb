<%= t('user_mailer.greeting', user: @user.display_name) %>

<%= t('.message', owner: @work.owner.display_name, collection: @work.collection.title, work: @work.title) %>

<%= t('.text.to_view', collection: @work.collection.title, work: @work.title, url: (collection_read_work_url(@work.owner, @work.collection, @work, only_path: false))) %>

<% unless @work.collection.owner.display_name.blank? %>
    <%= t('user_mailer.text.closing', from: @work.collection.owner.display_name) %>
<% else %>
    <%= t('user_mailer.text.closing', from: t('user_mailer.fromthepage')) %>
<% end %>

<%= t('user_mailer.text.turn_off_notification', url: update_profile_url(@user, only_path: false)) %>
