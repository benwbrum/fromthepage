<%= t('user_mailer.greeting', user: @user_activity.user.display_name) %>

<%= t('.message') %>

<% unless @user_activity.added_works.blank? %>
  <%= t('.new_works') %>
  <% @user_activity.added_works.each do |work| %>
    <%= t('.work_added', owner: work.owner.display_name, work: work.title, collection: work.collection.title) %>
    <%= t('.text.to_view_work', collection: work.collection.title, work: work.title, url: (collection_read_work_url(work.collection.owner, work.collection, work, only_path: false))) %>
  <%end%>
<%end%>

<% unless @user_activity.active_note_pages.blank? %>
  <%= t('.new_notes') %>
  <% @user_activity.active_note_pages.each do |page| %>
    <%= t('.note_added', work: page.work.title, collection: page.work.collection.title) %>
    <%= t('.text.to_view_note', work: page.work.title, page: page.title, url: (collection_transcribe_page_url(page.collection.owner, page.collection, page.work, page, only_path: false))) %>
  <%end%>
<%end%>

<%= t('user_mailer.text.closing') %>

<%= t('user_mailer.text.turn_off_notification', url: update_profile_url(@user_activity.user)) %>
