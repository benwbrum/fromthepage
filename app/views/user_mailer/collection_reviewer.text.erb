<%= t('user_mailer.greeting', user: @user.display_name) %>

<%= t('.message', owner: @collection.owner.display_name, collection: @collection.title) %>

<%= t('.text.to_view', collection: @collection.title, url: (collection_url(@collection.owner, @collection, only_path: false))) %>

<% unless @collection.owner.display_name.blank? %>
    <%= t('user_mailer.text.closing', from: @collection.owner.display_name) %>
<% else %>
    <%= t('user_mailer.text.closing', from: t('user_mailer.fromthepage')) %>
<% end %>

<%= t('user_mailer.text.turn_off_notification', url: (update_profile_url(@user, only_path: false))) %>
