<div class="two-columns">
  <div class="left-column">
    <div class="inside-column">

<div>
 <p>Page Edits</p>
 <table border="1">
 <tr>
    <th>
        Work
    </th>
    <th>
        Page
    </th>
    <th>
        Version
    </th>
    <th>
        Date
    </th>
    <th>
        Action
    </th>
 </tr>
 <% for version in @user.page_versions %>
   <tr>
     <td><%= version.page.work.title %></td>
     <td>
       <%= link_to(version.page.title,
                  { :controller => 'page_version',
                    :action => 'list',
                    :page_id => version.page.id }) %>
     </td>
     <td><%= version.page_version %></td>
     <td><%= version.created_on %></td>
     <td><%= link_to('view',
                     { :controller => 'page_version',
                       :action => 'show',
                       :page_version_id => version.id }) %></td>
   </tr>
 <% end %>
 </table>
</div>

<div>
 <p>Subject Article Edits</p>
 <table border="1">
 <tr>
    <th>
        Article
    </th>
    <th>
        Version
    </th>
    <th>
        Date
    </th>
    <th>
        Action
    </th>
 </tr>
 <% for version in @user.article_versions %>
   <tr>
     <td>
       <%= link_to(version.article.title,
                  { :controller => 'article_version',
                    :action => 'list',
                    :page_id => version.article.id }) %>
     </td>
     <td><%= version.version %></td>
     <td><%= version.created_on %></td>
     <td><%= link_to('view',
                     { :controller => 'article_version',
                       :action => 'show',
                       :page_version_id => version.id }) %></td>
   </tr>
 <% end %>
 </table>
</div>

   </div>
  </div>
  <div class="right-column">
        <div class="inside-column">
                <%= html_block('right') %>
        </div>
  </div>
</div>
